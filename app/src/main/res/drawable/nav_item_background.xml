<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item
                android:top="0dp"
                android:height="3dp"
                android:left="27dp"
                android:right="27dp"
                android:gravity="top">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" /> <!-- Top indicator color -->
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <color android:color="@android:color/transparent" />
    </item>
</selector>
